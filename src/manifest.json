{
  "manifest_version": 2,
 
  "version": "0.3.5",
  "name": "PrettyJustice",
  "description": "Past de layout aan voor wetten, koninklijke besluiten, etc. op ejustice.fgov.be",
  "icons": { "128": "icon128.png"},
 
  "content_scripts": [{
    "css": ["styles.css"],
	"js": ["content.js"],
    "matches": ["*://*.ejustice.just.fgov.be/*"],
	"include_globs": ["*fgov.be/*/*pl?language*", "*fgov.be/*/*pl?cn*", "*fgov.be/*/*pl?la*", "*fgov.be/*/*pl?table_name=wet*", "*fgov.be/*/*pl?table_name=loi*", "*fgov.be/*staatsblad", "*fgov.be/*justel"],
	"all_frames": true,
	"run_at": "document_end"
  }]
}
