{
  "manifest_version": 2,
  "version": "0.4.6",
  "name": "PrettyJustice",
  "description": "Past de layout aan voor wetten, koninklijke besluiten, etc. op ejustice.fgov.be",
  "icons": {
    "128": "assets/img/icon128.png"
  },
  "permissions": [
    "https://*.ejustice.just.fgov.be/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "index.html"
  ],
  "content_scripts": [
    {
      "css": [],
      "js": [
        "content-es2018.js",
        "runtime-es2018.js"
      ],
      "matches": [
        "*://*.ejustice.just.fgov.be/*"
      ],
      "include_globs": [
        "*fgov.be/*/*pl?language*",
        "*fgov.be/*/*pl?cn*",
        "*fgov.be/*/*pl?la*",
        "*fgov.be/*/*pl?table_name=wet*",
        "*fgov.be/*/*pl?table_name=loi*",
        "*fgov.be/*staatsblad",
        "*fgov.be/*justel"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
